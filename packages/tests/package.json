{
  "name": "tests",
  "private": true,
  "description": "Test suite for interactive background system",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint '**/*.{ts,tsx}' --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:headed": "playwright test --headed",
    "test:ci": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e",
    "test:local-ci": "bash ../../scripts/local-ci.sh"
  },
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "axe-playwright": "^2.0.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "eslint-plugin-vitest": "^0.3.0",
    "happy-dom": "^12.10.0",
    "typescript": "^5.2.0",
    "vitest": "^1.0.0"
  }
}