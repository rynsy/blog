{
  "name": "tests",
  "private": true,
  "description": "Test suite for interactive background system",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint '**/*.{ts,tsx}' --max-warnings=200",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:headed": "playwright test --headed",
    "test:ci": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e",
    "test:local-ci": "bash ../../scripts/local-ci.sh"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/d3-drag": "^3.0.7",
    "@types/d3-force": "^3.0.10",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-zoom": "^3.0.8",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^1.0.0",
    "axe-playwright": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.0",
    "eslint-plugin-vitest": "^0.3.0",
    "happy-dom": "^12.10.0",
    "typescript": "^5.6.3",
    "vitest": "^1.0.0"
  }
}