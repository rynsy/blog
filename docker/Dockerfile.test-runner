# Lightweight Dockerfile for running Playwright tests only
FROM mcr.microsoft.com/playwright:v1.54.2-jammy

# Install Node.js, pnpm, and build dependencies for native modules
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    python3 \
    python3-pip \
    git && \
    curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g pnpm@8 && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json pnpm-*.yaml ./
COPY packages/site/package.json ./packages/site/
COPY packages/tests/package.json ./packages/tests/

# Install dependencies
RUN pnpm install --filter tests --force

# Copy the built site and test files
COPY packages/site/public ./packages/site/public
COPY packages/tests/e2e ./packages/tests/e2e
COPY packages/tests/axe ./packages/tests/axe
COPY packages/tests/fixtures ./packages/tests/fixtures
COPY docker/playwright.docker.config.ts ./docker/

# Set environment
ENV NODE_ENV=test
ENV CI=true

WORKDIR /app/packages/tests

# Run focused Docker tests with custom config
CMD ["npx", "playwright", "test", "--config=/app/docker/playwright.docker.config.ts"]