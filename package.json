{
  "name": "personal-site-monorepo",
  "private": true,
  "description": "Personal Gatsby blog with interactive background system - monorepo",
  "version": "0.1.0",
  "author": "Ryan Lindsey",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^2.8.8",
    "turbo": "^1.10.0"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.33.5"
    }
  },
  "keywords": [
    "gatsby"
  ],
  "license": "0BSD",
  "scripts": {
    "build": "pnpm -F site build",
    "build:gh": "pnpm -F site build:gh",
    "build:cf": "pnpm -F site build:cf",
    "develop": "pnpm -F site develop",
    "start": "pnpm -F site start",
    "serve": "pnpm -F site serve",
    "clean": "pnpm -F site clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "deploy:cf": "pnpm run build:cf && cd packages/site && npx wrangler pages deploy public --project-name rynsy-personal-site",
    "deploy:cf:preview": "pnpm run build:cf && cd packages/site && npx wrangler pages deploy public --project-name rynsy-personal-site --compatibility-date 2024-10-01",
    "deploy:cf:integrated": "pnpm -F site deploy:cf:integrated",
    "deploy:cf:preview:integrated": "pnpm -F site deploy:cf:preview:integrated", 
    "deploy:gh:integrated": "pnpm -F site deploy:gh:integrated",
    "build:integrated": "pnpm -F site build:integrated",
    "new-blog": "cd packages/site && node scripts/new-blog.js",
    "lint": "pnpm -F tests lint",
    "typecheck": "pnpm -F tests typecheck",
    "test:ci": "pnpm -F tests test:ci",
    "test": "pnpm -F tests test:ci",
    "test:unit": "pnpm -F tests test:unit",
    "test:e2e": "pnpm -F tests test:e2e",
    "test:watch": "pnpm -F tests test:unit:watch",
    "test:local-ci": "chmod +x scripts/local-ci.sh && ./scripts/local-ci.sh",
    "test:docker:production": "docker-compose -f docker-compose.production-test.yml up --build production-site analytics-mock",
    "test:docker:e2e": "docker-compose -f docker-compose.production-test.yml up --build --profile testing",
    "test:docker:clean": "docker-compose -f docker-compose.production-test.yml down -v --remove-orphans"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rynsy/gatsby-demo"
  },
  "bugs": {
    "url": "https://github.com/rynsy/gatsby-demo/issues"
  }
}